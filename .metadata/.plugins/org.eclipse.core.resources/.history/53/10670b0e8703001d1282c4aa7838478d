package chess;

import boardgame.Board;
import chess.pieces.King;
import chess.pieces.Rook;

public class ChessMatch {
	
	private Board board;
	
	public ChessMatch() {
		board = new Board(8, 8); // na hora q iniciar a partida, cria um tabuleiro 8 por 8;
		initialSetup(); // e inicia o initialsetup, que seriam as peças e as posições da mesma;
	}
	
	public ChessPiece[][] GetPieces() {
		ChessPiece[][] mat = new ChessPiece[board.getRows()][board.getColumns()];
		for (int i=0; i<board.getRows(); i++) {
			for (int j=0; j<board.getColumns(); j++) {
				mat[i][j] = (ChessPiece) board.piece(i, j);
			}
		}
		return mat;
	}
	
	private void placeNewPiece(char column, int row, ChessPiece piece) {
		board.placePiece(piece, new ChessPosition(column, row).toPosition()); // operação de colocar peça, passando a posição nas coordenadas do xadrez e não da matriz;
	}
	
	private void initialSetup() {
		placeNewPiece('b', 6, new Rook(board, Color.WHITE));
		board.placePiece(new King(board, Color.BLACK));
		board.placePiece(new King(board, Color.WHITE));
		
	}
}